<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.douban.mapper.AccountMapper">
    <select id="findAccountByUsername" resultType="com.example.douban.pojo.Account">
        SELECT *
        FROM account
        WHERE username = #{username}
    </select>

    <update id="updateAccount" parameterType="com.example.douban.pojo.Account">
        UPDATE account
        SET password= #{password}
        WHERE username = #{username}
    </update>

    <insert id="insertAccount" parameterType="com.example.douban.pojo.Account">
        INSERT INTO account(username, password)
        VALUES(#{username}, #{password})
    </insert>
</mapper>
